<h1>Form Tambah Karyawan</h1><hr>


<% if (typeof pesanError !== 'undefined') { %>
    <span style="color: red;">
        <%= pesanError[0].path +': '+ pesanError[0].msg +' '+ pesanError[0].value %>
    </span>
    <br><br>
<% } %>

<form action="/karyawan/proses-insert-data" method="post">
    <label>Nama Lengkap</label>
    <input type="text" id="nama_lengkap" name="form_nama_lengkap" checked required>
    <br><br>

    <label>Gender</label>
    <br>
    <input type="radio" id="gender_l" name="form_gender" value="L" required>
    <label>Laki</label>
    <br>
    <input type="radio" id="gender_p" name="form_gender" value="P" required>
    <label>Perempuan</label>
    <br><br>

    <label>Alamat</label>
    <textarea name="form_alamat" id="alamat" required></textarea>
    <br><br>

    <label>Nomor Induk Pegawai</label>
    <input type="text" id="NIP" name="form_NIP" required>
    <br><br>

    <label>Jabatan</label>
    <select name="form_jabatan" id="departemen">
        <option selected value="">--- pilih ---</option>
        <% for (const i in departemen ) { %>
           <option value="<%= departemen[i].id %>"><%= departemen[i].nama %></option>
        <% } %>
    </select>
    <br><br>
    
    <label for="">Agama</label><br>
    <select name="form_agama">
        <option value="" selected>-- pilih --</option>
        <% for (const i in agama) { %>
            <option value="<%= agama[i].id %>"><%= agama[i].nama %></option>
        <% } %>
    </select>
    <br><br>

    <button type="submit">Submit</button>
</form>